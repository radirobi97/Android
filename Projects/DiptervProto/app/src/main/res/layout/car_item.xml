<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ivCarImage"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ivCarImage"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Alfa Romeo"
        android:textSize="35dp"
        android:id="@+id/tvCarType"
        android:textColor="@android:color/black"
        android:paddingLeft="10dp"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/tvCarType"
        app:layout_constraintTop_toBottomOf="@id/ivCarImage"
        app:layout_constraintRight_toRightOf="parent"
        android:text="1000000"
        android:textSize="35dp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:gravity="right|center_vertical"
        android:paddingRight="10dp"
        android:id="@+id/tvCarPrice"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvCarModel"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvCarType"
        app:layout_constraintRight_toRightOf="@id/tvCarType"
        android:paddingLeft="10dp"
        android:text="MODEL"
        android:textColor="@android:color/black"
        android:textSize="25dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>